<UserControl x:Class="BaconographyWP8Core.View.Markdown.MarkdownQuote"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid>
        <Border Margin="5,0,0,0" BorderThickness="3,0,0,0" BorderBrush="{StaticResource PhoneChromeBrush}">
            <ContentControl x:Name="content" Margin="10,5,5,5"/>
        </Border>
    </Grid>
</UserControl>