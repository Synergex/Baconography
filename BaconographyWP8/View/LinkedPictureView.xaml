<phone:PhoneApplicationPage
    x:Name="pageRoot"
    x:Class="BaconographyWP8.View.LinkedPictureView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:local="clr-namespace:BaconographyWP8.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" SupportedOrientations="PortraitOrLandscape">
    <UserControl.Resources>
        <DataTemplate x:Key="ImagePivotHeaderTemplate">
            <Grid Height="0"/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>

        <phone:Pivot Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                     Margin="0" Padding="0" x:Name="albumPivot"
                     ItemsSource="{Binding Path=Pictures}" >
            <phone:Pivot.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <local:ScalingPictureView ImageSource="{Binding ImageSource}" />
                    </Grid>
                </DataTemplate>
            </phone:Pivot.ItemTemplate>
            <phone:Pivot.TitleTemplate>
                <DataTemplate>
                    <Grid Height="30" MinWidth="430" HorizontalAlignment="Left" VerticalAlignment="Top"
                          Visibility="{Binding Path=IsAlbum, Converter={StaticResource booleanVisibilityConverter}}">
                        <local:PivotCountIndicator 
                            ItemsCount="{Binding ElementName=albumPivot, Path=Items.Count}"
                            SelectedPivotIndex="{Binding ElementName=albumPivot, Path=SelectedIndex}"/>
                    </Grid>
                </DataTemplate>
            </phone:Pivot.TitleTemplate>
            <phone:Pivot.HeaderTemplate>
                <DataTemplate>
                    <Grid />
                </DataTemplate>
            </phone:Pivot.HeaderTemplate>
        </phone:Pivot>

    </Grid>
</phone:PhoneApplicationPage>
