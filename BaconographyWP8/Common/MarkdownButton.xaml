<Button x:Class="BaconographyWP8.Common.MarkdownButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80" d:DesignWidth="480"
    FontFamily="Segoe WP"
    x:Name="buttonRoot" Height="20"
    HorizontalContentAlignment="Left"
    VerticalContentAlignment="Top"
    BorderThickness="0" Margin="0,0,0,-3" Padding="0,0,0,0">

    <Button.Template>
        <ControlTemplate TargetType="Button">
            <Grid Margin="0,-5,0,0">
                <TextBlock HorizontalAlignment="Left" FontSize="20" Padding="0" Margin="0"
                       Text="{Binding ElementName=buttonRoot, Path=Text}"/>
            </Grid>
        </ControlTemplate>
    </Button.Template>
</Button>