<UserControl
    x:Class="BaconographyW8.View.Markdown.MarkdownLink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BaconographyW8.View.Markdown"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Button x:Name="theLink" Command="{Binding Path=StaticCommands.GotoMarkdownLink, Mode=OneTime}" Style="{StaticResource TextButtonStyle}" Margin="0,0,0,0" Padding="0"/>
</UserControl>
